<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:elevation="20dp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/SRaspberryPi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_raspberry_pi"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="#000"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/StartingPiProgressBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_below="@+id/tView"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <TextView
        android:id="@+id/StartingPi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SRaspberryPi"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="@string/starting_raspberry_pi"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>